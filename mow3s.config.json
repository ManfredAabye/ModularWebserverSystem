{
  "Server": {
    "MySQL": {
      "Port": 3306,
      "BindAddress": "127.0.0.1",
      "DataDirectory": "data"
    },
    "Apache": {
      "Port": 80,
      "BindAddress": "0.0.0.0",
      "DocumentRoot": "www"
    }
  },
  "Database": {
    "DefaultDatabases": [
      "testdb"
    ],
    "CharacterSet": "utf8mb4",
    "Collation": "utf8mb4_unicode_ci"
  },
  "Performance": {
    "MySQL": {
      "MaxConnections": 100,
      "InnoDBBufferPoolSize": "128M"
    }
  },
  "Logging": {
    "MySQL": {
      "ErrorLog": "mysql_error.log"
    },
    "Apache": {
      "ErrorLog": "logs/error.log",
      "AccessLog": "logs/access.log"
    }
  }
}
